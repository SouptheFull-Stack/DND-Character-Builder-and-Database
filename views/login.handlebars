<div class="container py-5">
  {{! login form }}
  <form class='login-container mx-auto' id='login-form'>

    <h2 class="sedan-sc-regular centre">LOGIN</h2>

    <div class='form-group m-3'>
      <label for='login-email'>Email address</label>
      <input type='email' class='form-control' placeholder='Enter email' id="email-login"/>
    </div>
    <div class='form-group m-3'>
      <label for="login-pw">Password</label>
      <input type='password' class='form-control' placeholder='Password' id="password-login"/>
    </div>
    <div class='form-group m-3'>
      <button type="submit" class="btn btn-secondary form-control">Sign in</button>
    </div>
    <div class="d-flex justify-content-center">
      <p>Don't have an account?
        <a href="#" id="switch-to-reg">Sign Up!</a>
      </p>
    </div>
  </form>

  {{!-- sign up form --}}
  <form class='register-container mx-auto is-hidden' id='signup-form'>
    <h2 class="sedan-sc-regular centre">SIGN UP</h2>

    <div class='form-group m-3'>
      <label for="reg-user">Username</label>
      <input type='text' class='form-control' placeholder='Enter a username' id="username-signup" />
    </div>
    <div class='form-group m-3'>
      <label for="reg-email">Email Address</label>
      <input type='text' class='form-control' placeholder='Enter email' id="email-signup" />
    </div>
    <div class='form-group m-3'>
      <label for="reg-pw">Password</label>
      <input type='password' class='form-control' placeholder='Password' id="password-signup" />
      <small>Password must be at least 8 characters long</small>
    </div>
    <div class='form-group m-3'>
      <button type='submit' class='btn btn-secondary form-control' value='Register'>Register</button>
    </div>
    <div class="d-flex justify-content-center">
      <p>Already have an account? 
        <a href="#" id="switch-to-log">Login!</a>
      </p>
    </div>
  </form>
</div>

<script src='/js/login.js'></script>