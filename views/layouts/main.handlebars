<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {{! font awesome }}
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
      rel="stylesheet"
    />
    {{! bootstrap }}
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    {{! google font }}
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Sedan+SC&display=swap"
      rel="stylesheet"
    />
    {{! group style sheet }}
    <link rel="stylesheet" href="/css/style.css" />
    <title>D&D Character Creation</title>
    {{! Set tab icon to logo }}
    <link rel="icon" href="/images/dragon_freepik.png" />
  </head>

  <body>
    <header>
     <nav class="navbar navbar-expand-md navbar-dark bg-dark p-2">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <img
        src="/images/dragon_freepik.png"
        alt="DnD CC Logo attributed to Freepik"
        class="navlogo"
      />
    </a>
    <div class="brand px-3 pt-2 m-3">
      <h3 class="sedan-sc-regular centre">Dungeons & Dragons</h3>
      <p class="sedan-sc-regular centre">Character Creation</p>
    </div>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                  {{!-- stretch goals! --}}
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/characters">Characters</a></li>
                    {{!-- <li class="nav-item"><a class="nav-link" href="#">Histories</a></li> --}}
                    {{!-- if user is logged in, show profile and logout button --}}
                    {{#if loggedIn}}
                    <li class="nav-item"><button class="nav-link" id="logout">Logout</button></li>
                    {{!-- if not logged in, show login --}}
                    {{else}}
                    <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
                    {{/if}}
                </ul>
            </div>
        </div>
      </nav>

    </header>

    <main class="py-5 px-3 hero">
      {{{body}}}
    </main>

    <footer class="bg-secondary text-light py-4 px-1">
      <div class="footer-body">
        <div class="row">
          <div class="col-md-4 text-center">
            <div class="content-box brand p-3 m-2">
              <h3 class="sedan-sc-regular centre">Dungeons & Dragons</h3>
              <p class="sedan-sc-regular centre">Character Creation</p>
            </div>
          </div>
          <div class="col-md-4 text-center">
            <h4>About us</h4>
            <p>
              Lorem ipsum dolor sit amet, consectetur adipisicing elit.
              Voluptatem enim architecto maiores minus nihil sint quam
              blanditiis? Obcaecati tempora suscipit reiciendis nisi fugiat ut,
              doloremque saepe? Ut modi cum similique!
            </p>
          </div>
          <div class="col-md-4 text-center">
            <br class="social-icons">
              <span>Follow Us</span>
              <br>
              <a href=""><i class="fab fa-facebook fa-2x"></i></a>
              <a href=""><i class="fab fa-instagram fa-2x"></i></a>
              <a href=""><i class="fab fa-twitter fa-2x"></i></a>
              <a href=""><i class="fab fa-youtube fa-2x"></i></a>
              <a
                href="https://github.com/SouptheFull-Stack/DND-Character-Builder-and-Database"><i class="fab fa-github fa-2x"></i></a>
              </br>
            </div>
          </div>
        </div>
        <div class="text-center">
          <small>&copy; 2024 <b>Group 2</b> - all rights reserved</small>
          <br />
          <small>Logo designed by
            <a href="https://www.freepik.com/">Freepik</a></small>
        </div>
      </div>
    </footer>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    {{#if loggedIn}}
      <script src="/js/logout.js"></script>
    {{/if}}

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"
      crossorigin="anonymous"
    ></script>

  </body>
</html>