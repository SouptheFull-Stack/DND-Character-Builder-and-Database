<div class="welcome-User">
  <div class="background">
    <h1>Welcome, {{$user.name}}!</h1>
  </div>
  <div class="wrapper">
    <a href="/profile/create"><button class="btn btn-success">+ Create New Character</button></a>
    <div class="Characters">
      <h2> Your characters:</h2>
      <ul class="dropDown-Characters">
        {{#each characters as |character|}}
          <li>Name: {{name}} Age: {{age}} Race: {{race.name}} Class: {{class.name}}</li><a href=""><button class="btn">More Info</button></a>
        {{/each}}
      </ul>
    </div>
    <div class="Information">
      <button href="../views/info.handlebars">More Info</button>
    </div> 
  </div>
</div>
