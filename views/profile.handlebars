<div class="welcome-User">
  <div class="background">
    <h1>Welcome, {{$user.name}}!</h1>
  </div>
  <div class="wrapper">
    <a class="btn btn-success" href="/profile/create"><button>+ Create New Character</button></a>
    <div class="Characters">
      <h2> Your characters:</h2>
      <ul class="dropDown-Characters">
        {{#each characters as |character|}}
          <li>{{character.name}}</li>
        {{/each}}
      </ul>
    </div>
    <div class="Information">
      <button href="../views/info.handlebars">More Info</button>
    </div> 
  </div>
</div>
