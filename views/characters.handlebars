<h1 class="text-center py-5">Welcome, {{userName}}!</h1>
 <a href="/characters/create"><button class="btn btn-success position-absolute top-20 start-50 translate-middle">+ Create New Character</button></a>
<section class="container d-flex flex-wrap">
        {{#each characters}}
        <div class="card accordion-card">
            <div class="card-body my-3">
                <h4 class="text-center charNames">{{name}}</h4>
                <div class="accordion" id="accordionExample{{@index}}">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingOne{{@index}}">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne{{@index}}" aria-expanded="true" aria-controls="collapseOne{{@index}}">
                                Alignment: {{alignment.name}}
                            </button>
                        </h2>
                        <div id="collapseOne{{@index}}" class="accordion-collapse collapse show" aria-labelledby="headingOne{{@index}}" data-bs-parent="#accordionExample{{@index}}">
                            <div class="accordion-body">
                                {{alignment.description}}
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingTwo{{@index}}">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo{{@index}}" aria-expanded="false" aria-controls="collapseTwo{{@index}}">
                                Race: {{race.name}}
                            </button>
                        </h2>
                        <div id="collapseTwo{{@index}}" class="accordion-collapse collapse" aria-labelledby="headingTwo{{@index}}" data-bs-parent="#accordionExample{{@index}}">
                            <div class="accordion-body">
                                {{race.stats}}
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingThree{{@index}}">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree{{@index}}" aria-expanded="false" aria-controls="collapseThree{{@index}}">
                                Class: {{subclass.name}}{{class.name}}
                            </button>
                        </h2>
                        <div id="collapseThree{{@index}}" class="accordion-collapse collapse" aria-labelledby="headingThree{{@index}}" data-bs-parent="#accordionExample{{@index}}">
                            <div class="accordion-body">
                                {{class.description}} <br/>
                                {{subclass.description}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </section>


